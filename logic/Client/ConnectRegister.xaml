<Window x:Class="Client.ConnectRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="ConnectRegister" Height="224" Width="350" ResizeMode="NoResize" >
    <Grid>
        <Label Content="Input your ID and Port below." HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="184"/>
        <Label Content="ID:" HorizontalAlignment="Left" Height="24" Margin="0,31,0,0" VerticalAlignment="Top" Width="53"/>
        <Label Content="Port:" HorizontalAlignment="Left" Height="24" Margin="0,103,0,0" VerticalAlignment="Top" Width="53"/>
        <TextBox Name="IDBox" HorizontalAlignment="Left" Height="20" Margin="2,55,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" BorderBrush="Black"/>
        <TextBox Name="PortBox" HorizontalAlignment="Left" Height="20" Margin="2,127,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" BorderBrush="Black"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="269,157,0,0" VerticalAlignment="Top" Click="Save" Width="62" Background="Ivory"/>
        <TextBox x:Name="State" HorizontalAlignment="Left" Height="20" Margin="2,165,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" BorderBrush="White" IsReadOnly="True"/>

    </Grid>
</Window>
